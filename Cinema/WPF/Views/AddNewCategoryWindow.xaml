<Window x:Class="Cinema.WPF.Views.AddNewCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema.WPF.Views"
        mc:Ignorable="d"
        Title="Создать новую категорию" Height="210" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="Название" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameBox"  HorizontalAlignment="Center" Margin="0,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>

        <Label Content="Стоимость" HorizontalAlignment="Left" Margin="11,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CostBox"  HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>

        <Button x:Name="CreateButton" Content="Создать" HorizontalAlignment="Left" Margin="150,130,0,0" VerticalAlignment="Top" Height="33" Width="124" Click="CreateButton_Click"/>
    </Grid>
</Window>
